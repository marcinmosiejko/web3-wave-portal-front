{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:prettier/recommended",
    "prettier"
  ],

  "plugins": ["prettier"],

  "rules": {
    "prettier/prettier": [
      "error",
      { "endOfLine": "auto" },
      { "usePrettierrc": true }
    ], // Use our .prettierrc file as source
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "parser": "@babel/eslint-parser"
}
